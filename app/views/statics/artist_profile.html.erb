<div class= "profile-page-boarder">
<!-- TEMPORARY PLACEHOLDER -->
<!-- <button class="btn btn-default" id="logout-button">Logout</button> -->
<br><br>

<!-- TOP PROFILE -->
<div class="row">
  <!-- PICTURE  -->
  <div class= "col-xs-3">
    <img  class= "profile-image" src=<%= current_artist.avatar %> width="200" height="200" class="circle">
  </div>
  <!-- PROFILE INFORMATION -->
  <div class= "col-xs-6">
    <h1><%= current_artist.name %></h1>
    <h3> <%= current_artist.description %> </h3>
  </div>
  <!-- CONTACT INFORMATION -->
  <div class= "col-xs-3 pull-right">
    <h3> <%= current_artist.contact %> </h3>
  </div>
</div>
<hr>

<!-- BOTTOM CONTENT -->
<div class="row">

  <!-- SIDEBAR -->
  <div class= "col-xs-3">
    <nav class="navbar navbar-default" id="sidebar-wrapper" role="navigation">
      <ul class="nav sidebar-nav">
          <li>
              <a class="to-upload-artworks">Upload Art</a>
              <%= render 'statics/artist/artist_upload_art' %>
          </li>
          <li>
              <a class="to-artist-settings">Settings</a>
          </li>
          <li>
              <a class="to-artist-artworks">Show Artwork</a>
          </li>
      </ul>
    </nav>
  </div>
  <!-- END OF SIDEBAR -->

  <!-- PAGE CONTENT -->
  <div class= "col-xs-9">
    <%= render 'statics/artist/artist_artworks' %>
    <%= render 'statics/artist/artist_settings' %>
  </div>

</div>
</div>