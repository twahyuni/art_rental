<!--MODAL TO UPLOAD PICTURE- -->

<!-- Modal -->
 <div id="upload-picture-Modal" class="modal fade" role="dialog">
   <div class="modal-dialog">
   <!-- Modal content-->
   <div class="modal-content">
     <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal">&times;</button>
       <h4 class="modal-title">Upload picture</h4>
     </div>
     <div class="modal-body">
       <input id="picture-fileupload" type="file" name="location_picture" multiple>
       <form id="upload-picture-form">
         <h4> picture Work Details </h4>
         <h5> Title:</h5>
         <input type="text" name="title">
         <h5> Location Picture:</h5>
         <input type="text" name="location">
         <h5> Description:</h5>
         <input type="text" name="description">
         <button type="submit" class="btn btn-default" > submit</button>
       </form>
     </div>
     <div class="modal-footer">
       <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
     </div>
   </div>
  </div>
 </div>